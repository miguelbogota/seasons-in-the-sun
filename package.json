{
  "name": "seasons-in-the-sun",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "npm": "9",
    "node": "18"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev -p 4000",
    "build": "next build",
    "start": "next start",
    "lint": "pnpm lint:css && pnpm lint:js",
    "lint:js": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:css": "stylelint '**/*.scss' --max-warnings 0",
    "format": "prettier --write .",
    "test:unit": "vitest run .",
    "test:unit-watch": "vitest .",
    "test:spelling": "cspell \"**\" --no-must-find-files",
    "test:lint-staged": "lint-staged",
    "model:generate-tsx": "gltfjsx --file public/models/{name-of-modal}.glb -t -o game/models/{name-of-modal}.tsx"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@react-three/drei": "^9.97.5",
    "@react-three/fiber": "^8.15.16",
    "@react-three/rapier": "^1.2.1",
    "clsx": "^2.1.0",
    "framer-motion": "^11.0.3",
    "gun": "^0.2020.1239",
    "lodash": "^4.17.21",
    "next": "14.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.50.1",
    "three": "^0.161.0",
    "three-stdlib": "^2.29.4",
    "zod": "^3.22.4",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.2.1",
    "@types/lodash": "^4.14.202",
    "@types/node": "20.11.17",
    "@types/react": "18.2.55",
    "@types/react-dom": "18.2.19",
    "@types/three": "^0.161.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cspell": "^8.3.2",
    "eslint": "8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "globals": "^14.0.0",
    "gltfjsx": "^6.2.16",
    "husky": "^9.0.10",
    "jest-extended": "^4.0.2",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "sass": "^1.70.0",
    "stylelint": "^16.2.1",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-prettier": "^5.0.0",
    "stylelint-scss": "^6.1.0",
    "typescript": "5.3.3",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.2.2",
    "vitest-canvas-mock": "^0.3.3"
  }
}
